@model BlocoNotas.Models.Note

@{
    ViewData["Title"] = "Eliminar Nota";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background: linear-gradient(to bottom right, #f8f9fa, #e9ecef); min-height: 100vh;">

<div class="container py-4">

    <h3 class="text-danger mb-4">Tem a certeza que pretende eliminar esta nota?</h3>

    <div class="card shadow-sm bg-white mb-4">
        <div class="card-body">
            <h4 class="card-title">Nota</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Content)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Content)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedAt)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.UpdatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.UpdatedAt)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IsDeleted)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.IsDeleted)</dd>

                <dt class="col-sm-3">Utilizador</dt>
                <dd class="col-sm-9">
                    @(Model.User != null ? Model.User.UserName : "Sem Utilizador")
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="NoteId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar Ã  Lista</a>
    </form>

</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
