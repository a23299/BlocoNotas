@model BlocoNotas.Models.Note
@{
    ViewData["Title"] = "Eliminar Nota";
}

<div class="container mt-5">
    <div class="alert alert-warning shadow-sm">
        <h4 class="alert-heading">Tem a certeza que deseja eliminar esta nota?</h4>
        <hr />
        <p><strong>Título:</strong> @Model.Title</p>
        <p><strong>Conteúdo:</strong> @Model.Content</p>

        <div class="mt-4">
            <button id="confirmDelete" class="btn btn-danger me-2">Confirmar Eliminação</button>
            <a href="/Notes" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>

<script>
    document.getElementById("confirmDelete").addEventListener("click", async () => {
        const token = localStorage.getItem("token");
        if (!token) {
            alert("Precisa de estar autenticado.");
            return;
        }

        const noteId = @Model.NoteId;

        try {
            const response = await fetch(`/api/NotesApi/${noteId}`, {
                method: "DELETE",
                headers: {
                    "Authorization": "Bearer " + token
                }
            });

            if (response.ok) {
                window.location.href = "/Notes";
            } else {
                const data = await response.json();
                alert(data.message || "Erro ao eliminar nota.");
            }
        } catch (error) {
            alert("Erro ao conectar com o servidor.");
            console.error(error);
        }
    });
</script>