@model BlocoNotas.Models.Note
@{
    ViewData["Title"] = "Detalhes da Nota";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title">@Model.Title</h3>
            <p class="card-text">@Model.Content</p>
            <p class="text-muted">
                <small>Criada em: @Model.CreatedAt.ToString("g")</small><br />
                <small>Última atualização: @Model.UpdatedAt.ToString("g")</small>
            </p>
        </div>
        <div class="card-footer text-end">
            <a href="/Notes/Edit/@Model.NoteId" class="btn btn-warning me-2">Editar</a>
            <a href="/Notes/Delete/@Model.NoteId" class="btn btn-danger me-2">Eliminar</a>
            <a href="/Notes" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>