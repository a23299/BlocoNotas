@model IEnumerable<BlocoNotas.Models.Note>

@{
    ViewData["Title"] = "Notas";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background: linear-gradient(to bottom right, #f8f9fa, #e9ecef); min-height: 100vh;">
    <div class="container py-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary">Lista de Notas</h2>
            <a class="btn btn-success" asp-action="Create">+ Criar Nova</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Content)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.First().IsDeleted)</th>
                            <th>Utilizador</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Title)</td>
                                <td>@Html.DisplayFor(m => item.Content)</td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(item.IsDeleted ? "Sim" : "Não")</td>
                                <td>@Html.DisplayFor(m => item.User.UserName)</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.NoteId">Editar</a>
                                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.NoteId">Detalhes</a>
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.NoteId">Apagar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">Não existem notas registadas.</div>
        }

    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
