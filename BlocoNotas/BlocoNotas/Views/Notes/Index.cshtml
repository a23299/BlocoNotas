@model IEnumerable<BlocoNotas.Models.Note>

@{
    ViewData["Title"] = "Notas";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background: linear-gradient(to bottom right, #f8f9fa, #e9ecef); min-height: 100vh;">
    <div class="container py-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary">Lista de Notas</h2>
            <a class="btn btn-success" asp-action="Create">+ Criar Nova</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <h2>Minhas Notas</h2>

            <div id="notesList">A carregar...</div>

            <script>
                async function loadNotes() {
                const response = await fetch('/api/NotesApi');
                const notes = await response.json();

                const notesList = document.getElementById('notesList');
                notesList.innerHTML = '';

                notas.forEach(nota => {
                        const div = document.createElement('div');
                        div.innerHTML = `
                            <h4>${nota.title}</h4>
                            <p><strong>ID:</strong> ${nota.noteId}</p>
                            <p><strong>Utilizador:</strong> ${nota.userId}</p>
                            <p><strong>Criada em:</strong> ${new Date(nota.createdAt).toLocaleString()}</p>
                            <hr/>
                            `;
                        container.appendChild(div);
                        });
                }

                loadNotes();
            </script>
        }
        else
        {
            <div class="alert alert-warning">NÃ£o existem notas registadas.</div>
        }

    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
