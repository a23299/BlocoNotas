@model BlocoNotas.Models.Tag

@{
    ViewData["Title"] = "Editar Tag";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-body">
                <h2 class="card-title mb-4 text-primary text-center">✏️ Editar Tag</h2>

                <div id="alertArea"></div>

                <form id="tagForm">
                    <input type="hidden" id="tagId" value="@Model.TagId" />

                    <div class="mb-3">
                        <label for="tagName" class="form-label">Nome da Tag</label>
                        <input type="text" class="form-control" id="tagName" value="@Model.Name" required />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Tags" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("tagForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const tagId = document.getElementById("tagId").value;
            const name = document.getElementById("tagName").value;
            const token = localStorage.getItem("token");

            const response = await fetch(`/api/TagsApi/${tagId}`, {
                method: "PUT",
                headers: {
                    "Content-Type": "application/json",
                    "Authorization": `Bearer ${token}`
                },
                body: JSON.stringify({ tagId: tagId, name: name })
            });

            if (response.ok) {
                window.location.href = "/Tags";
            } else {
                const data = await response.json();
                showAlert("danger", data.message ?? "Erro ao editar a tag.");
            }
        });

        function showAlert(type, message) {
            const alertArea = document.getElementById("alertArea");
            alertArea.innerHTML = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
            </div>
        `;
        }
    </script>
}
