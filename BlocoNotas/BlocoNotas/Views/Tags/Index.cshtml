@{
    ViewData["Title"] = "Tags";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">ğŸ·ï¸ Lista de Tags</h2>

    <div class="mb-3">
        <a href="/Tags/Create" class="btn btn-success">+ Nova Tag</a>
    </div>

    <div id="tagList" class="row gy-3">
        <!-- Carregamento dinÃ¢mico -->
    </div>
</div>

@section Scripts {
    <script>
        const tagsApiUrl = "/api/TagsApi";
        const token = localStorage.getItem("token");

        function getAuthHeaders() {
            const headers = { "Content-Type": "application/json" };
            if (token) headers["Authorization"] = `Bearer ${token}`;
            return headers;
        }

        async function loadTags() {
            const res = await fetch(`${tagsApiUrl}/all`, { headers: getAuthHeaders() });
            const tags = await res.json();
            const list = document.getElementById("tagList");

            list.innerHTML = "";

            if (tags.length === 0) {
                list.innerHTML = "<p class='text-muted fst-italic'>ğŸ˜• Nenhuma tag encontrada.</p>";
                return;
            }

            for (const tag of tags) {
                list.innerHTML += `
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <span class="fw-bold">ğŸ·ï¸ ${tag.name}</span>
                            <div>
                                <a href="/Tags/Edit/${tag.tagId}" class="btn btn-sm btn-outline-primary me-1">âœï¸ Editar</a>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteTag(${tag.tagId})">ğŸ—‘ï¸ Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            }
        }

        async function deleteTag(id) {
            if (!confirm("â— Tens a certeza que queres eliminar esta tag?")) return;

            const res = await fetch(`${tagsApiUrl}/${id}`, {
                method: "DELETE",
                headers: getAuthHeaders()
            });

            if (res.ok) {
                loadTags();
            } else {
                alert("âš ï¸ Erro ao eliminar tag.");
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            loadTags();
        });
    </script>
}