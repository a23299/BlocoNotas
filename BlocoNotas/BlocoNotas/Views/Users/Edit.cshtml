@model BlocoNotas.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Utilizador"; <!-- Define o t√≠tulo da p√°gina -->
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-sm border-0" style="max-width: 480px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary fw-bold">@ViewData["Title"]</h2> <!-- Cabe√ßalho com o t√≠tulo -->

            <div id="alertArea"></div> <!-- √Årea para mostrar alertas -->

            <form id="editUserForm" class="needs-validation" novalidate>
                <!-- Formul√°rio para editar utilizador -->
                <input type="hidden" id="UserId" value="@Model.Id" /> <!-- Guarda o ID do utilizador -->

                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Nome</label> <!-- Label do campo Nome -->
                    <input type="text" class="form-control" id="username" required /> <!-- Input para nome, obrigat√≥rio -->
                    <div class="invalid-feedback">Por favor insira o nome.</div> <!-- Mensagem de valida√ß√£o -->
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label> <!-- Label do campo Email -->
                    <input type="email" class="form-control" id="email" required /> <!-- Input para email, obrigat√≥rio -->
                    <div class="invalid-feedback">Por favor insira um email v√°lido.</div> <!-- Mensagem de valida√ß√£o -->
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-semibold">Password</label> <!-- Label do campo Password -->
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" /> <!-- Input para password -->
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword" title="Mostrar password">
                            üëÅ <!-- Bot√£o para mostrar/ocultar password -->
                        </button>
                    </div>
                    <small class="form-text text-muted">Deixe em branco para manter a password atual.</small> <!-- Nota explicativa -->
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Users/Index" class="btn btn-outline-secondary px-4">Cancelar</a> <!-- Bot√£o cancelar -->
                    <button type="submit" class="btn btn-success px-4">üíæ Guardar Altera√ß√µes</button> <!-- Bot√£o guardar -->
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Valida√ß√£o Bootstrap do formul√°rio
    (() => {
        'use strict'
        const form = document.getElementById('editUserForm');
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {  // Se o formul√°rio n√£o for v√°lido
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated'); // Adiciona classe para feedback visual da valida√ß√£o
        }, false);
    })();

    // Refer√™ncias ao input de password e bot√£o para mostrar/ocultar password
    const passwordInput = document.getElementById("password");
    const togglePasswordBtn = document.getElementById("togglePassword");

    // Mostra a password ao pressionar o bot√£o
    togglePasswordBtn.addEventListener("mousedown", () => {
        passwordInput.type = "text";
    });

    // Volta a ocultar a password ao soltar o bot√£o
    togglePasswordBtn.addEventListener("mouseup", () => {
        passwordInput.type = "password";
    });

    // Tamb√©m oculta a password se o mouse sair do bot√£o
    togglePasswordBtn.addEventListener("mouseleave", () => {
        passwordInput.type = "password";
    });

    // C√≥digo executado quando a p√°gina est√° carregada
    document.addEventListener("DOMContentLoaded", async () => {
        const userId = document.getElementById("UserId").value;
        const nameInput = document.getElementById("username");
        const emailInput = document.getElementById("email");
        const token = localStorage.getItem("token");

        try {
            // Busca os dados do utilizador da API
            const response = await fetch(`/api/UsersApi/${userId}`, {
                headers: {
                    "Authorization": `Bearer ${token}`
                }
            });

            if (!response.ok) throw new Error("Erro ao carregar dados");

            const user = await response.json();
            nameInput.value = user.userName; // Preenche nome
            emailInput.value = user.email;   // Preenche email
        } catch (err) {
            showAlert("danger", "Erro: " + err.message); // Mostra erro se falhar
        }

        // Evento para enviar formul√°rio via AJAX
        document.getElementById("editUserForm").addEventListener("submit", async e => {
            e.preventDefault();

            if (!e.target.checkValidity()) return; // N√£o envia se inv√°lido

            // Prepara objeto atualizado
            const updatedUser = {
                id: userId,
                userName: nameInput.value,
                email: emailInput.value
            };

            // Se a password foi alterada, adiciona ao objeto
            const newPassword = passwordInput.value.trim();
            if (newPassword.length > 0) {
                updatedUser.password = newPassword;
            }

            try {
                // Envia atualiza√ß√£o para a API
                const res = await fetch(`/api/UsersApi/${userId}`, {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": `Bearer ${token}`
                    },
                    body: JSON.stringify(updatedUser)
                });

                if (res.ok) {
                    showAlert("success", "Utilizador atualizado com sucesso."); // Mensagem de sucesso
                    form.classList.remove('was-validated'); // Remove valida√ß√£o visual
                    passwordInput.value = ""; // Limpa o campo de password
                } else {
                    const errText = await res.text();
                    showAlert("danger", "Erro ao guardar: " + errText); // Mostra erro na atualiza√ß√£o
                }
            } catch (err) {
                showAlert("danger", "Erro: " + err.message); // Erro de exce√ß√£o
            }
        });
    });

    // Fun√ß√£o para mostrar alertas na UI
    function showAlert(type, message) {
        const alertArea = document.getElementById("alertArea");
        alertArea.innerHTML = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
            </div>
        `;
    }
</script>
