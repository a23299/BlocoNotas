@model IEnumerable<BlocoNotas.Models.ApplicationUser>

@{
    ViewData["Title"] = "Lista de Utilizadores"; <!-- Define o t√≠tulo da p√°gina -->
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary border-bottom pb-2">Lista de Utilizadores</h2> <!-- Cabe√ßalho principal -->

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0" id="usersTable">
            <thead class="table-primary text-primary">
            <tr>
                <th>ID</th> <!-- Coluna do ID do utilizador -->
                <th>Nome</th> <!-- Coluna do nome do utilizador -->
                <th>Email</th> <!-- Coluna do email -->
                <th class="text-center">A√ß√µes</th> <!-- Coluna para bot√µes de a√ß√£o -->
            </tr>
            </thead>
            <tbody>
            <!-- Linhas da tabela geradas dinamicamente via JavaScript -->
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", async () => {
        const tableBody = document.querySelector("#usersTable tbody");
        const token = localStorage.getItem("token"); <!-- Obt√©m token de autentica√ß√£o do armazenamento local -->
        const roles = JSON.parse(localStorage.getItem("roles") || "[]"); <!-- Obt√©m roles do utilizador logado -->

        if (!token) {
            <!-- Caso n√£o haja token, mostra mensagem de erro -->
            tableBody.innerHTML = `<tr><td colspan="4" class="text-danger text-center">Necessita fazer login para ver esta p√°gina.</td></tr>`;
            return;
        }

        try {
            <!-- Faz requisi√ß√£o √† API para obter lista de utilizadores -->
            const response = await fetch("/api/UsersApi", {
                headers: {
                    "Authorization": `Bearer ${token}`
                }
            });

            if (response.status === 401) {
                <!-- Se n√£o autorizado, mostra mensagem e pede login -->
                tableBody.innerHTML = `<tr><td colspan="4" class="text-danger text-center">N√£o autorizado. Fa√ßa login novamente.</td></tr>`;
                return;
            }

            if (!response.ok) throw new Error("Erro ao carregar utilizadores"); <!-- Se erro geral, lan√ßa exce√ß√£o -->

            const users = await response.json();
            const isAdmin = roles.includes("Admin"); <!-- Verifica se o utilizador atual √© Admin -->

            tableBody.innerHTML = ""; <!-- Limpa o conte√∫do da tabela antes de preencher -->

            users.forEach(user => {
                const userIsAdmin = (user.roles || []).includes("Admin"); <!-- Verifica se o utilizador listado √© Admin -->
                const canPromote = isAdmin && !userIsAdmin; <!-- S√≥ pode promover se for admin e o utilizador n√£o for admin -->

                const row = document.createElement("tr");

                row.innerHTML = `
                    <td class="text-truncate" style="max-width:120px;">${user.id}</td> <!-- ID do utilizador -->
                    <td>${user.userName}</td> <!-- Nome do utilizador -->
                    <td>${user.email}</td> <!-- Email do utilizador -->
                    <td class="text-center" style="white-space: nowrap;"> <!-- Coluna de a√ß√µes -->
                        <a href="/Users/Edit/${user.id}" class="btn btn-sm btn-outline-primary me-1" title="Editar Utilizador">
                            <i class="bi bi-pencil me-1"></i> ‚úèÔ∏è Editar
                        </a>
                        <a href="/Users/Details/${user.id}" class="btn btn-sm btn-outline-info me-1" title="Detalhes">
                            <i class="bi bi-info-circle me-1"></i> ‚öôÔ∏è Detalhes
                        </a>
                        <button class="btn btn-sm btn-outline-danger me-1" title="Eliminar Utilizador" onclick="deleteUser('${user.id}')">
                            <i class="bi bi-trash me-1"></i> üóëÔ∏è Eliminar
                        </button>
                        ${canPromote ? `<button class="btn btn-sm btn-warning" title="Dar permiss√µes de Admin" onclick="promoteToAdmin('${user.id}')">
                            <i class="bi bi-shield-lock me-1"></i> Dar Admin
                        </button>` : ''}
                    </td>
                `;

                tableBody.appendChild(row); <!-- Adiciona a linha na tabela -->
            });

        } catch (error) {
            <!-- Mostra mensagem de erro caso a requisi√ß√£o falhe -->
            tableBody.innerHTML = `<tr><td colspan="4" class="text-danger text-center">${error.message}</td></tr>`;
        }
    });

    // Fun√ß√£o para eliminar utilizador ap√≥s confirma√ß√£o
    async function deleteUser(id) {
        if (!confirm("Tem a certeza que quer eliminar este utilizador?")) return;

        const token = localStorage.getItem("token");

        try {
            const res = await fetch(`/api/UsersApi/${id}`, {
                method: "DELETE",
                headers: {
                    "Authorization": `Bearer ${token}`
                }
            });

            if (res.ok) {
                location.reload(); <!-- Recarrega a p√°gina para atualizar lista -->
            } else {
                alert("Erro ao eliminar utilizador"); <!-- Mostra erro se falhar -->
            }
        } catch (err) {
            alert("Erro: " + err.message); <!-- Mostra erro da exce√ß√£o -->
        }
    }

    // Fun√ß√£o para promover utilizador a Admin ap√≥s confirma√ß√£o
    async function promoteToAdmin(userId) {
        const token = localStorage.getItem("token");

        if (!confirm("Tem a certeza que quer promover este utilizador a Admin?")) return;

        try {
            const res = await fetch(`/api/UsersApi/MakeAdmin/${userId}`, {
                method: "POST",
                headers: {
                    "Authorization": `Bearer ${token}`
                }
            });

            if (res.ok) {
                alert("Utilizador promovido a Admin com sucesso!"); <!-- Confirma√ß√£o de sucesso -->
                location.reload(); <!-- Recarrega a p√°gina para atualizar -->
            } else {
                const error = await res.json();
                alert("Erro: " + (error.message || JSON.stringify(error))); <!-- Mensagem de erro detalhada -->
            }
        } catch (err) {
            alert("Erro: " + err.message); <!-- Mostra erro da exce√ß√£o -->
        }
    }
</script>
