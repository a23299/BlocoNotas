@{
    Layout = "_Layout";
    ViewData["Title"] = "Página Inicial";
}

<div class="container py-5 d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">

    <h1 class="display-4 text-primary mb-3">Bem-vindo ao BlocoNotas</h1>

    <p class="lead mb-4 text-center">
        Organize as suas ideias e tarefas com facilidade e segurança.
    </p>

    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="LogIn">Log In</a>
        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Register">Sign In</a>
    </div>

    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
        <a class="btn btn-primary btn-lg" asp-controller="Notes" asp-action="Index">Ver Notas</a>
    </div>

    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
        <a class="btn btn-outline-primary btn-lg" asp-controller="Users" asp-action="Index">Gerir Utilizadores</a>
    </div>

    <p class="text-center">
        Precisa de ajuda? Consulte a <a href="#" class="link-primary">documentação</a>.
    </p>

</div>
