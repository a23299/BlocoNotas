@{
    Layout = "_Layout";  <!-- Define o layout base da p√°gina -->
    ViewBag.Title = "Registo";  <!-- Define o t√≠tulo da p√°gina para o cabe√ßalho -->
}

<!-- Container principal para centrar vertical e horizontalmente o conte√∫do -->
<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <!-- T√≠tulo do formul√°rio de registo -->
                <h2 class="mb-4 text-center text-primary fw-bold">Criar Conta</h2>

                <!-- Formul√°rio de registo de novo utilizador -->
                <form id="registerForm">
                    <!-- Campo para o nome de utilizador -->
                    <div class="form-group mb-3">
                        <label for="username" class="form-label">Nome de Utilizador</label>
                        <input type="text" class="form-control" id="username" placeholder="Ex: Teste02" required>
                    </div>

                    <!-- Campo para o email -->
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="O seu email" required />
                    </div>

                    <!-- Campo para a password com bot√£o para mostrar/ocultar -->
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" placeholder="Password segura" required />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword1" title="Mostrar password">üëÅ</button>
                        </div>
                    </div>

                    <!-- Campo para confirmar a password com bot√£o para mostrar/ocultar -->
                    <div class="form-group mb-4">
                        <label for="confirmPassword" class="form-label">Confirmar Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Repita a password" required />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword2" title="Mostrar password">üëÅ</button>
                        </div>
                    </div>

                    <!-- Bot√£o de submiss√£o do formul√°rio -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">üìù Registar</button>
                    </div>
                </form>

                <!-- Div para mostrar mensagens de erro no registo, inicialmente oculta -->
                <div id="registerError" class="alert alert-danger mt-4 d-none" role="alert"></div>
            </div>
        </div>
    </div>
</div>

<script>
    // Refer√™ncias aos inputs de password e aos bot√µes de mostrar/ocultar password
    const passwordInput = document.getElementById("password");
    const confirmPasswordInput = document.getElementById("confirmPassword");
    const togglePassword1 = document.getElementById("togglePassword1");
    const togglePassword2 = document.getElementById("togglePassword2");

    // Mostrar password do primeiro campo enquanto o bot√£o estiver pressionado
    togglePassword1.addEventListener("mousedown", () => passwordInput.type = "text");
    togglePassword1.addEventListener("mouseup", () => passwordInput.type = "password");
    togglePassword1.addEventListener("mouseleave", () => passwordInput.type = "password");

    // Mostrar password do segundo campo enquanto o bot√£o estiver pressionado
    togglePassword2.addEventListener("mousedown", () => confirmPasswordInput.type = "text");
    togglePassword2.addEventListener("mouseup", () => confirmPasswordInput.type = "password");
    togglePassword2.addEventListener("mouseleave", () => confirmPasswordInput.type = "password");

    // Captura o evento submit do formul√°rio para registo via AJAX
    document.getElementById("registerForm").addEventListener("submit", async function (e) {
        e.preventDefault();  // Previne reload da p√°gina

        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        const errorDiv = document.getElementById("registerError");

        // Valida√ß√£o simples para verificar se as passwords coincidem
        if (password !== confirmPassword) {
            errorDiv.classList.remove("d-none");
            errorDiv.innerText = "As passwords n√£o coincidem.";
            return;
        }

        // Envia a requisi√ß√£o POST para a API de registo com os dados do formul√°rio
        const response = await fetch("/api/auth/register", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                username: document.getElementById("username").value,
                email: document.getElementById("email").value,
                password: password
            })
        });

        if (response.ok) {
            // Se o registo foi bem sucedido, guarda token no localStorage e redireciona para a homepage
            const data = await response.json();
            localStorage.setItem("token", data.token);
            window.location.href = "/";
        } else {
            // Em caso de erro, mostra mensagem adequada ao utilizador
            const error = await response.json();
            errorDiv.classList.remove("d-none");

            if (response.status === 400) {
                errorDiv.innerText = "Dados inv√°lidos. Verifique os campos.";
            } else if (response.status === 409) {
                errorDiv.innerText = "Email ou utilizador j√° existe.";
            } else {
                errorDiv.innerText = error.message || "Erro ao registar.";
            }
            
            if (error.errors && Array.isArray(error.errors)) {
                errorDiv.innerText = error.errors.join(", ");
            } else {
                errorDiv.innerText = error.message || "Erro ao registar";
            }
        }
    });
</script>
