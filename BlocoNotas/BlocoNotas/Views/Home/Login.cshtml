@{
    Layout = "_Layout";  <!-- Define o layout base da p치gina -->
    ViewBag.Title = "Login";  <!-- Define o t칤tulo da p치gina para o cabe칞alho -->
}

<!-- Container principal para centrar vertical e horizontalmente o conte칰do -->
<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <!-- T칤tulo da p치gina de login -->
                <h2 class="mb-4 text-center text-primary fw-bold">Acesso ao BlocoNotas</h2>

                <!-- Formul치rio de login -->
                <form id="loginForm">
                    <!-- Campo para o email do utilizador -->
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="O seu email" required />
                    </div>

                    <!-- Campo para a password com bot칚o para mostrar/ocultar -->
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" placeholder="A sua password" required />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword" title="Mostrar password">
                                游녜
                            </button>
                        </div>
                    </div>

                    <!-- Bot칚o de submiss칚o do formul치rio -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">
                            游댏 Entrar
                        </button>
                    </div>
                </form>

                <!-- Div para mostrar mensagens de erro no login, inicialmente oculta -->
                <div id="loginError" class="alert alert-danger mt-4 d-none" role="alert"></div>
            </div>
        </div>
    </div>
</div>

<script>
    // Obten칞칚o dos elementos do DOM para manipula칞칚o
    const passwordInput = document.getElementById("password");
    const togglePasswordBtn = document.getElementById("togglePassword");

    // Mostrar password enquanto o bot칚o estiver pressionado
    togglePasswordBtn.addEventListener("mousedown", () => {
        passwordInput.type = "text";
    });

    // Ocultar password quando o bot칚o for solto
    togglePasswordBtn.addEventListener("mouseup", () => {
        passwordInput.type = "password";
    });

    // Ocultar password se o cursor sair do bot칚o antes de soltar
    togglePasswordBtn.addEventListener("mouseleave", () => {
        passwordInput.type = "password";
    });

    // Captura o evento submit do formul치rio para login via AJAX
    document.getElementById("loginForm").addEventListener("submit", async function (e) {
        e.preventDefault();  // Previne reload da p치gina

        // Envia a requisi칞칚o POST com email e password para a API de autentica칞칚o
        const response = await fetch("/api/auth/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                email: document.getElementById("email").value,
                password: document.getElementById("password").value
            })
        });

        const errorDiv = document.getElementById("loginError");

        if (response.ok) {
            // Se o login foi bem sucedido, guarda token e roles no localStorage e redireciona para p치gina inicial
            const data = await response.json();
            localStorage.setItem("token", data.token);
            localStorage.setItem("roles", JSON.stringify(data.user.roles));
            window.location.href = "/";
        } else {
            // Em caso de erro, mostra mensagem apropriada ao utilizador
            const error = await response.json();
            errorDiv.classList.remove("d-none");

            if (response.status === 400) {
                errorDiv.innerText = "Credenciais inv치lidas. Verifique o email e a password.";
            } else if (response.status === 404) {
                errorDiv.innerText = "Utilizador n칚o encontrado.";
            } else {
                errorDiv.innerText = error.message || "Erro ao fazer login.";
            }
        }
    });
</script>
