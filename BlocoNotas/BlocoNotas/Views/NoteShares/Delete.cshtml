@model BlocoNotas.Models.Note

@{
    ViewData["Title"] = "Remover Partilha";
}

<div class="container py-4">
    <h2 class="text-danger">üóëÔ∏è @ViewData["Title"]</h2>

    <form asp-action="DeleteSharedConfirmed" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="NoteId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold">T√≠tulo</label>
            <input asp-for="Title" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label fw-bold">Conte√∫do</label>
            <textarea asp-for="Content" class="form-control" rows="6" readonly></textarea>
        </div>

        <div class="alert alert-warning shadow-sm">
            <strong>Tem a certeza que deseja remover esta nota partilhada?</strong><br />
            Esta a√ß√£o apenas remove o acesso √† nota partilhada consigo ‚Äî a nota original permanecer√° intacta.
        </div>

        <button type="submit" class="btn btn-danger me-2">Remover Partilha</button>
        <a asp-action="SharedWithMe" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Valida√ß√£o de formul√°rio com Bootstrap 5
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
