@model BlocoNotas.Models.NoteShare

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>NoteShare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoteId" class="control-label"></label>
                <select asp-for="NoteId" class ="form-control" asp-items="ViewBag.NoteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SharedWithUserId" class="control-label"></label>
                <select asp-for="SharedWithUserId" class ="form-control" asp-items="ViewBag.SharedWithUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SharedAt" class="control-label"></label>
                <input asp-for="SharedAt" class="form-control" />
                <span asp-validation-for="SharedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CanEdit" /> @Html.DisplayNameFor(model => model.CanEdit)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
